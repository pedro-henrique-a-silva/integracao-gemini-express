generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String @id @default(uuid())
  name      String @unique
  email     String @unique
  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") 
  Measures Measures[]

  @@map("customers")
}

enum Measure {
  WATER
  GAS
}

model Measures {
  id          String @id @default(uuid())
  custumer Customer @relation(fields: [custumerId], references: [id])
  custumerId  String @map("custumer_id")
  measuteType Measure @map("measute_type")
  measureValue Float @map("measure_value")
  confirmedValue Float @map("confirmed_value")
  measureDate DateTime @map("measure_date")
  imageUrl    String @map("image_url")
  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") 

  @@map("measures")
}




